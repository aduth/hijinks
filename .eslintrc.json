{
	"root": true,
	"extends": "@aduth/eslint-config/es5",
	"parserOptions": {
		"ecmaVersion": 2015,
		"sourceType": "module"
	},
	"env": {
		"browser": true
	},
	"rules": {
		"eqeqeq": "off",
		"no-unused-vars": [
			"error",
			{
				"varsIgnorePattern": "^hijinks$"
			}
		],
		"no-var": "off"
	},
	"overrides": [
		{
			"files": "test/**/*.js",
			"extends": "@aduth/eslint-config",
			"env": {
				"node": true,
				"es6": true,
				"mocha": true
			},
			"parserOptions": {
				"ecmaVersion": 2020
			}
		}
	]
}
